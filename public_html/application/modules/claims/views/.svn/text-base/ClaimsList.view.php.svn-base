    						$diff = $now->diff($element->getEntryDate());
    						$years = $diff->y;
							$months = $diff->m;
							$days = $diff->d;
    						if($years > 0 || $months > 0 || $days >= claimsConcepts::CRITICALPENDINGSTATETIME){
    							$state = 1;
    						}
    					}
    					?>

	    					if($element->getAssigned()){
	    						echo 'Asignado ' . Util::getAssignedDate($element->getEntryDate()->format("Y-m-d"));
	    					}
	    					else{
	    						if($element->getStateId() != claimsConcepts::CANCELLEDSTATE){
	    							echo "Sin asignar";
	    						}
	    					}
    					}
    					?>
